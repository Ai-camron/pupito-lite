# Secret key used to sign and verify JWT tokens.
# Use a long, random string and NEVER commit the real value.
JWT_SECRET=change_me_in_production

# Email service provider used by Nodemailer.
# Supported values (per project guidelines): gmail | outlook | hostinger
EMAIL_PROVIDER=gmail

# Email address used as the "from" sender and SMTP username.
EMAIL_USER=your-email@example.com

# App-specific password for providers that require it (e.g. Gmail app password).
# Leave empty if your provider uses EMAIL_PASSWORD instead.
EMAIL_APP_PASSWORD=your-app-password

# SMTP password if your provider does not use app-specific passwords.
# For some providers this is the same as your account password or an SMTP token.
EMAIL_PASSWORD=your-smtp-password

# SMTP host of your email provider (e.g. smtp.gmail.com, smtp.office365.com).
EMAIL_HOST=smtp.example.com

# SMTP port of your email provider.
# Common values: 465 (TLS), 587 (STARTTLS).
EMAIL_PORT=587

# Whether to use a secure TLS connection immediately.
# "true" is typical for port 465, "false" for port 587 with STARTTLS.
EMAIL_SECURE=false

# Address where contact form and newsletter notifications are delivered.
# This can be the same as EMAIL_USER or any inbox you monitor.
NOTIFICATION_EMAIL=notifications@example.com

# Printful API token used for product, order, and shipping operations.
# Generate this in your Printful dashboard and keep it secret.
PRINTFUL_API_TOKEN=your-printful-api-token
